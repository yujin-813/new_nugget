# .env.example
# 환경 변수 예시 파일
# 실제 사용 시 .env 파일로 복사하여 값을 채워주세요.

# Flask Secret Key (랜덤 문자열 생성 권장)
FLASK_SECRET_KEY=your-secret-key-here
FLASK_ENV=development
FLASK_DEBUG=0
PORT=5001
SESSION_COOKIE_SECURE=0
SESSION_COOKIE_SAMESITE=Lax
SESSION_LIFETIME_HOURS=24
MAX_CONTENT_LENGTH_MB=50

# OpenAI API Key (선택사항 - Semantic Matching 사용 시)
# OPENAI_API_KEY=your-openai-api-key-here

# Admin API Token (운영 관리용 엔드포인트 보호)
ADMIN_API_TOKEN=change-me

# 학습 데이터 운영 정책
LEARNING_RETENTION_DAYS=180

# Regression monitoring
APP_BASE_URL=
ADMIN_API_TOKEN=
JANDI_WEBHOOK_URL=
REGRESSION_DAYS=14
REGRESSION_LIMIT=100
REGRESSION_BAD_RATE_THRESHOLD=20
# route별 임계치(선택): file=30,ga4=15,ga4_followup=20
REGRESSION_ROUTE_THRESHOLDS=
REGRESSION_USER_ID=
TRAINING_EXPORT_MAX_ROWS=5000
TRAINING_EXPORT_LABEL_FILTER=good

# Google OAuth Credential 로딩 옵션 (셋 중 하나 사용)
# GOOGLE_OAUTH_CLIENT_JSON={\"web\":{...}}
# GOOGLE_OAUTH_CLIENT_JSON_BASE64=base64-encoded-json
# GOOGLE_CLIENT_SECRET_PATH=client_secret.json
# 외부 URL(터널/배포)에서 OAuth mismatch 방지용 콜백 URI
# 예: https://<your-domain>/oauth2callback
OAUTH_REDIRECT_URI=

# JANDI 공유 웹훅 (선택)
# 예: https://wh.jandi.com/connect-api/webhook/xxxxx/yyyyy
JANDI_WEBHOOK_URL=
